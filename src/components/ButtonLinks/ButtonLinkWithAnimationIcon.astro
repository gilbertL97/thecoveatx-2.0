---
interface Props {
	text: string
}

const { text } = Astro.props
---

<a
	class="group relative inline-flex items-center overflow-hidden rounded border border-current from-sky-500 to-indigo-500 px-8 py-3 hover:bg-gradient-to-r focus:outline-none focus:ring active:text-gray-200"
	href="#"
>
	<span class="absolute -end-full transition-all duration-300 group-hover:end-4">
		<slot name="icon" />
	</span>

	<span class="text-lg font-medium transition-all group-hover:me-4">{text}</span>
</a>
