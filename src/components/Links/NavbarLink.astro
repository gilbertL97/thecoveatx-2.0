---
interface Props {
	text: string
	link: string
	active?: boolean
}
const { text, link, active } = Astro.props
const mobileMenuActive = 'bg-white rounded-xl text-slate-800 '
const mobileDesign = 'items-center justify-center py-3 group  w-full flex '
const desktopdesgin = 'md:bg-transparent md:inline md:py-0 md:text-white'
---

<a
	href={link}
	class=` transition duration-300 ${active && mobileMenuActive}${mobileDesign}${desktopdesgin}`
	>{text}
	<span
		class=`block h-0.5 max-w-0 bg-white md:transition-all md:duration-500 md:group-hover:max-w-full ${active ? 'md:max-w-full ' : ''}`
	></span>
</a>
