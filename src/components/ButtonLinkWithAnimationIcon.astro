---
interface Props {
	text: string
}

const { text } = Astro.props
---
<a
class="group relative inline-flex items-center overflow-hidden rounded border border-current px-8 py-3  focus:outline-none focus:ring active:text-gray-200"
href="#"
>
<span class="absolute -end-full transition-all group-hover:end-4">
   <slot name="icon"></slot>
</span>

<span class="text-sm font-medium transition-all group-hover:me-4">{text}</span>
</a>